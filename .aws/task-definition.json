{
  "family": "diario-oficial-task",
  "networkMode": "awsvpc",
  "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "diario-oficial-api",
      "image": "ACCOUNT_ID.dkr.ecr.REGION.amazonaws.com/diario-oficial-api:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "hostPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "POSTGRES_HOST",
          "value": "seu-rds-endpoint"
        },
        {
          "name": "POSTGRES_USER",
          "value": "user"
        },
        {
          "name": "POSTGRES_PASSWORD",
          "value": "password"
        },
        {
          "name": "POSTGRES_DB",
          "value": "publications"
        },
        {
          "name": "AMQP_URL",
          "value": "amqp://user:password@rabbitmq-host"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/diario-oficial",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048"
}